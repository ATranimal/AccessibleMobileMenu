<link rel="stylesheet" type="text/css" href="/css/style.css" /> 

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
<script src="/js/typeahead.bundle.js"></script>

<h1>Chez Tran Dish Database</h1>

<h5>Create a new dish</h5> 

<div class="row">
  <div class="three columns">

    <fieldset>
        <label for="restaurant"></label>
        <input type="text" id="restaurant" name="restaurant" value="tran" style="display:none">
        <label for="name">Name</label>
        <br />
        <input type="text" id="name" name="name" placeholder="Enter the dish name" />
        <br />
        <div id="category">
        <label for="price">Category</label>
            <br />
        <input class="typeahead" type="text" id="categorymessage" name="category" placeholder="Enter the category" />
        </div>
        <br />
        <label for="price">Price</label>
        <br />
        <input type="text" id="price" name="price" placeholder="Enter the price" />
        <br />
        <label for="description">Description</label>
        <br />
        <textarea id="description" name="description"></textarea>
        <br />
        <div id ="ingredients">
        <label for="tags">Ingredients</label>
            <br />
        <input class="typeahead" type="text" id="ingredient" name="ingredients"/>
        </div>
        <br />
        <div id="picture">
            <label for="picture">Picture</label>
            <br />
            <input type="file" id="picture" name="picture" accept="image/png, image/jpeg">
        </div>
        <br />
        <button id="submit" action="add">Submit</button>
    </fieldset>
  </div>
  <div id="ingredient_list" class="three columns">
    <h6><u>Ingredient List:</u></h6>
  </div>
  <div class="six columsn">
    <h5>Placeholder for preview</h5>

  </div>
</div>

</br>

<h5>Edit existing dishes</h5>
<% dishes.forEach(function(dish) { %>
  <% if (dish.restaurant == "tran") { %>
  <p><%= dish.name %> <button id="<%= dish.id%>" action="edit">Edit Dish</button><button id="<%= dish.id %>">x</button></p>
  <% } %>
<% }); %>



