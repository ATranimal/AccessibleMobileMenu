<link rel="stylesheet" type="text/css" href="/css/skeleton.css" />
<link rel="stylesheet" type="text/css" href="/css/normalize.css" />
<link rel="stylesheet" type="text/css" href="/css/style.css" /> 

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>

<h1><%= dish.name %></h1>
<form>
    <p>Description:=
    <textarea id="description" name="description" rows=4 cols=50><%= dish.description %></textarea></p>
    <p>Price:
    <input type="text" id="price" name="price" value="<%= dish.price %>"/></p>
    <p>Category: 
    <input type="text" id="category" name="category" value="<%= dish.category %>" /></p>
    <p>Ingredients: <%= dish.ingredients %></p>
    <br />
    <button id="submitButton" type="button" data-id="<%= dish.id %>">Submit Changes</button>
</form>

<a href=../inputform/<%= dish.restaurant %>>Go Back</a>

<script>
$("#submitButton").on("click", function(){
    var id = $("#submitButton").data("id");
    console.log($("#price").val());
    $.ajax({
        url: "/api/v1/dish/" + id,
        data: {
            description: $("#description").val(),
            price: $("#price").val(),
            category: $("#category").val()
        },
        type: "PUT",
        success: function(result){
            window.location.reload(false); 
            }    
        });
    }
); 



</script>
